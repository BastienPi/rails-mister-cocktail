<h1>Card of cocktails</h1>

<%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary" %>

<% @cocktails.each do |cocktail| %>
  <h3><li>
  <%= link_to cocktail.name, cocktail_path(cocktail) %>
  <%= cl_image_tag cocktail.photo.path, height: 300, width: 400, crop: :fill %>

  <%= link_to "Delete", cocktail_path(cocktail), class: "btn btn-secondary",
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</li></h3>
<% end %>



