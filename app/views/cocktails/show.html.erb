<h2><%= @cocktail.name %></h2>
<hr>
<%= link_to "go back to the list of cocktails", cocktails_path , class: "btn btn-primary"%>
<hr>

<% if @cocktail.doses.empty? %>
  <%= "This cocktail has no description yet" %>
<% else %>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

  <br></br>
<%= "List of ingredients :" %>
  <br></br>
  <% @cocktail.doses.each do |dose| %>
    <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose), method: :delete %>
    </li>
  <% end %>
<% end %>


<hr>
<%= "Here you can add a dose to your cocktail" %>
<br></br>
<%= render "doses/form" %>

